<div class="row mb-4">
  <div class="col-md-6 offset-md-3">

    <ul class="nav nav-pills nav-justified">
      <li class="nav-item">
        <%= link_to "My events", my_events_path(@user.slug), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "My messages", my_messages_path(@user.slug), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "My calendar", my_calendar_path(@user.slug), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "My groups", my_groups_path(@user.slug), class: "nav-link" %>
      </li>
    </ul>

    <h1 class="display-6">Users</h1>

    <div class="card mb-4">
      <div class="card-body">
        <%= search_form_for @q, url: directory_path do |f| %>
          <p>Search users:</p>

          <div class="form-inputs">
            <%= f.label :name_cont, "Name contains" %>
            <%= f.text_field :name_cont, :placeholder => "Enter a few characters", input_html: { class: 'form-control' } %>
          </div>

          <div class="d-flex justify-content-between">
            <%= f.submit :class => "btn btn-primary btn-block" %>
            <a href="/directory">Clear filters</a>
          </div>
        <% end %>
      </div>
    </div>

    <div id="users">
      <% @users.each do |user| %>
        <div class="mb-3">
          <%= render "users/user", user: user %>
          <%= link_to "Show this user", user.slug %>
        </div>
      <% end %>
    </div>
  </div>
</div>
