
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar, class: 'rounded-circle mr-2', width: 80, height: 80 %>
          <% elsif user.image %>
            <%= image_tag user.image, class: 'rounded-circle mr-2', width: 80, height: 80 %>
          <% end %>
          <div class="card-text">
            <div class="d-flex justify-content-end">
              <h3 class="display-6">
              <%= user.name %>
              </h3>
            </div>
            <div class="d-flex justify-content-end">
              <p>
                <%= user.role %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
