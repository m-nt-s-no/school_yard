<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <%= render @event %>

    <div>
      <%# NOTE: since you have a policy for this, you could use the scope of the event policy %>
      <% if current_user == @event.group.leader %>
        <div class="d-flex align-items-center justify-content-between">
          <div class="btn btn-outline-primary">
            <%= link_to "Edit this event", edit_event_path(@event) %>
          </div>
          <%= button_to "Delete this event", @event, method: :delete, class: 'btn btn-outline-danger' %>
        </div>
      <% end %>
      <div class="mt-3">
        <%= link_to "My events", my_events_path(current_user.slug) %> |
      <%= link_to "My calendar", my_calendar_path(current_user.slug) %>
      </div>

    </div>
  </div>
</div>
